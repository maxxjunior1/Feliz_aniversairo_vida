  <script>
    // Música
    const musicBtn = document.getElementById('play-music-btn');
    let audio;

    musicBtn.addEventListener('click', () => {
      if (!audio) {
        audio = new Audio('inevitavel.mp3'); // precisa estar na mesma pasta
        audio.loop = true;
      }
      audio.play().then(() => {
        musicBtn.style.display = 'none';
      }).catch(err => {
        alert('Não foi possível tocar a música. Verifique se o arquivo existe e é mp3 válido.');
        console.error(err);
      });
    });

    // Mostrar/ocultar seções
    const cartasBtn = document.getElementById("btn-cartas");
    const surpresaBtn = document.getElementById("btn-surpresa");
    const cartasSection = document.getElementById("cartas");
    const surpresaSection = document.getElementById("surpresa");

    cartasBtn.addEventListener("click", () => {
      cartasSection.classList.toggle("hidden");
    });

    surpresaBtn.addEventListener("click", () => {
      surpresaSection.classList.toggle("hidden");
    });

    // Criar corações no fundo
    function createHeart() {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.innerHTML = ""; // símbolo de coração real
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.fontSize = Math.random() * 18 + 16 + "px";
      document.getElementById("hearts").appendChild(heart);
      setTimeout(() => heart.remove(), 10000);
    }
    setInterval(createHeart, 2000);
  </script>
